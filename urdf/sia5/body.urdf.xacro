<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- about mass rate -->
  <property name="base_rate" value="5.0" />
  <property name="s_rate" value="1.2" />
  <property name="l_rate" value="1.0" />
  <property name="e_rate" value="0.15" />
  <property name="u_rate" value="0.05" />
  <property name="r_rate" value="0.02" />
  <property name="b_rate" value="0.02" />
  <property name="t_rate" value="0.005" />
  <property name="sum_rate" value="${base_rate + s_rate
								   + l_rate + e_rate
								   + u_rate + r_rate
								   + b_rate + t_rate}" />
  
  <xacro:macro name="link_v1" params="name mass
                                      ixx ixy ixz
                                      iyy iyz izz">
    <link name="${name}">
      <visual>
        <geometry>
          <mesh filename="package://motoman_description/meshes/sia5/visual/COLLADA/${name}.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_description/meshes/sia5/collision/STL/${name}.stl"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="${mass}"/>
        <inertia ixx="${ixx}" ixy="${ixy}" ixz="${ixz}" iyy="${iyy}" iyz="${iyz}" izz="${izz}" />
      </inertial>
    </link>
  </xacro:macro>

  <xacro:macro name="joint_v1" params="joint_name
									   parent_name child_name
                                       ox oy oz roll pitch yaw ax ay az
									   el ll ul vl
									   skp skv sll sul">
    <joint name="${joint_name}" type="continuous">
      <origin xyz="${ox} ${oy} ${oz}" rpy="${roll} ${pitch} ${yaw}"/>
      <parent link="${parent_name}"/>
      <child link="${child_name}"/>
      <axis xyz="${ax} ${ay} ${az}"/>
	  <dynamics damping="0.7" friction="0.7"/>
      <limit effort="${el}" lower="${ll}" upper="${ul}" velocity="${vl}"/>
      <safety_controller k_position="${skp}" k_velocity="${skv}" soft_lower_limit="${sll}" soft_upper_limit="${sul}"/>
    </joint>
  </xacro:macro>
</robot>
