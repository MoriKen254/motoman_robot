<?xml version="1.0"?>
<robot name="sia5" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="link_v1" params="name color mass
                                      ixx ixy ixz
                                      iyy iyz izz">
    <link name="${name}">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_description/meshes/sia5/visual/stl/${name}.stl"/>
        </geometry>
        <material name="${color}"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://motoman_description/meshes/sia5/collision/stl/${name}.stl"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="${mass}"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="${ixx}" ixy="${ixy}" ixz="${ixz}" iyy="${iyy}" iyz="${iyz}" izz="${izz}" />
      </inertial>
    </link>
  </xacro:macro>

  <xacro:macro name="joint_v1" params="joint_name
									   parent_name child_name
                                       ox oy oz ax ay az
									   el ll ul vl
									   skp skv sll sul">
    <joint name="${joint_name}" type="continuous"><!-- revolute"> -->
      <origin rpy="0 0 0" xyz="${ox} ${oy} ${oz}"/>
      <parent link="${parent_name}"/>
      <child link="${child_name}"/>
      <axis xyz="${ax} ${ay} ${az}"/>
      <limit effort="${el}" lower="${ll}" upper="${ul}" velocity="${vl}"/>
      <safety_controller k_position="${skp}" k_velocity="${skv}" soft_lower_limit="${sll}" soft_upper_limit="${sul}"/>
    </joint>
  </xacro:macro>
</robot>

