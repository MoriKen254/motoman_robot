<?xml version="1.0"?>
<robot name="sia20" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- File Include -->
  <xacro:include filename="$(find motoman_description)/urdf/common.xacro" />
  <xacro:include filename="$(find motoman_description)/urdf/materials.xacro"/>
  <xacro:include filename="$(find motoman_description)/urdf/sia20/link.urdf.xacro" />

  <!-- Hard ware limits -->
  <!-- Range limits -->
  <xacro:property name="joint_s_upper_limit" value="${180*M_PI/180}"/>
  <xacro:property name="joint_s_lower_limit" value="-${joint_s_upper_limit}"/>
  <xacro:property name="joint_l_upper_limit" value="${110*M_PI/180}"/>
  <xacro:property name="joint_l_lower_limit" value="-${joint_l_upper_limit}"/>
  <xacro:property name="joint_e_upper_limit" value="${170*M_PI/180}"/>
  <xacro:property name="joint_e_lower_limit" value="-${joint_e_upper_limit}"/>
  <xacro:property name="joint_u_upper_limit" value="${130*M_PI/180}"/>
  <xacro:property name="joint_u_lower_limit" value="-${joint_u_upper_limit}"/>
  <xacro:property name="joint_r_upper_limit" value="${180*M_PI/180}"/>
  <xacro:property name="joint_r_lower_limit" value="-${joint_r_upper_limit}"/>
  <xacro:property name="joint_b_upper_limit" value="${110*M_PI/180}"/>
  <xacro:property name="joint_b_lower_limit" value="-${joint_b_upper_limit}"/>
  <xacro:property name="joint_t_upper_limit" value="${180*M_PI/180}"/>
  <xacro:property name="joint_t_lower_limit" value="-${joint_t_upper_limit}"/>

  <!-- Velocity limits -->
  <xacro:property name="joint_s_velocity_limit" value="${130*M_PI/180}"/>
  <xacro:property name="joint_l_velocity_limit" value="${130*M_PI/180}"/>
  <xacro:property name="joint_e_velocity_limit" value="${170*M_PI/180}"/>
  <xacro:property name="joint_u_velocity_limit" value="${170*M_PI/180}"/>
  <xacro:property name="joint_r_velocity_limit" value="${200*M_PI/180}"/>
  <xacro:property name="joint_b_velocity_limit" value="${200*M_PI/180}"/>
  <xacro:property name="joint_t_velocity_limit" value="${400*M_PI/180}"/>

  <!-- Add Link & Joint -->
  <!-- base_link -->
  <link name="base_link">
    <visual>
      <origin rpy="${M_PI/2} 0 0"/>
      <geometry>
        <mesh filename="package://motoman_description/meshes/sia20/base_link/visual.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="${M_PI/2} 0 0"/>
      <geometry>
        <mesh filename="package://motoman_description/meshes/sia20/base_link/collision.stl"/>
      </geometry>
    </collision>
  </link>
  

  <!-- Link S -->
  <xacro:link_v0 suffix="s" parent="base_link">
    <origin xyz="0 0 0.112"/>
    <limit effort="100.0" lower="${joint_s_lower_limit}"
           upper="${joint_s_upper_limit}" velocity="${joint_s_velocity_limit}"/>
  </xacro:link_v0>
  <!-- Link L -->
  <xacro:link_v0 suffix="l" parent="link_s">
    <origin xyz="0 0 0.298" rpy="${M_PI/2} 0 0"/>
    <limit effort="100.0" lower="${joint_l_lower_limit}"
           upper="${joint_l_upper_limit}" velocity="${joint_l_velocity_limit}"/>
  </xacro:link_v0>
  <!-- Link E -->
  <xacro:link_v0 suffix="e" parent="link_l">
    <origin xyz="0 0.266 0" rpy="${-M_PI/2} 0 0"/>
    <limit effort="100.0" lower="${joint_e_lower_limit}"
           upper="${joint_e_upper_limit}" velocity="${joint_e_velocity_limit}"/>
  </xacro:link_v0>
  <!-- Link U -->
  <xacro:link_v0 suffix="u" parent="link_e">
    <origin xyz="0 0 0.224" rpy="${M_PI/2} 0 0"/>
    <limit effort="100.0" lower="${joint_u_lower_limit}"
           upper="${joint_u_upper_limit}" velocity="${joint_u_velocity_limit}"/>
  </xacro:link_v0>
  <!-- Link R -->
  <xacro:link_v0 suffix="r" parent="link_u">
    <origin xyz="0 0.264 0" rpy="${-M_PI/2} 0 0"/>
    <limit effort="100.0" lower="${joint_r_lower_limit}"
           upper="${joint_r_upper_limit}" velocity="${joint_r_velocity_limit}"/>
  </xacro:link_v0>
  <!-- Link B -->
  <xacro:link_v0 suffix="b" parent="link_r">
    <origin xyz="0 0 0.156" rpy="${M_PI/2} 0 0"/>
    <limit effort="100.0" lower="${joint_b_lower_limit}"
           upper="${joint_b_upper_limit}" velocity="${joint_b_velocity_limit}"/>
  </xacro:link_v0>
  <!-- Link T -->
  <xacro:link_v0 suffix="t" parent="link_b">
    <origin xyz="0 0.167 0" rpy="${-M_PI/2} 0 0"/>
    <limit effort="100.0" lower="${joint_t_lower_limit}"
           upper="${joint_t_upper_limit}" velocity="${joint_t_velocity_limit}"/>
  </xacro:link_v0>


</robot>
